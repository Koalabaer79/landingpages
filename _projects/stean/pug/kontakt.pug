doctype html
html(lang="de")
	head
		title Kontakt zu Stean
		meta(name="description",content="Kontaktiere Stean den Maine Coon Mix")
		meta(name="keywords",content="kontakt, stean, maine coon, mix, kater")
		link(rel="alternate" hreflang="de-DE" href="https://www.stean-maine-coon.de/kontakt.php")
		link(rel="canonical" href="https://www.stean-maine-coon.de/kontakt.php")
		link(href="./css/kontakt.css",rel="stylesheet",type="text/css")
		script(src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous")

		include ./_shared/head.pug

	body(id="body")
		div.(id="container")
			include ./_shared/nav_de.pug

			.insCont
				h1 Kontaktiere Stean
				h2 Kontaktdaten
				p Lars Urban<br>Ernst-TIchauer-Weg 16<br>21035 Hamburg
				p <b>Kontaktinformationen</b><br />Tel.: 0172 745 48 48<br>Email: urban@u-php.de</p>

				h2.marginTop Direktkontakt zu Stean
				.icoCont
					img.icon(src="./assets/icons/schreiben.png" alt="Schreibe Stean direkt")
				form.formCont(method="post" name="form" enctype="multipart/form-data" onSubmit="return false;")
					.input
						#success
					.input
						input#name.normal(type="text" placeholder="Name *" name="name")
						#errorname
					.input
						input#email.normal(type="email" placeholder="Email *" name="email")
						#erroremail
					.input
						textarea#anliegen.normal(placeholder="Deine Nachricht *" name="anliegen")
						#erroranliegen
					.input
						label.container Bitte akzeptiere die <a href="datenschutz.php" target="_blank">Datenschutzbestimmungen<a>.
							input#dsgvo.normCheck(type="checkbox" name="dsgvo")
							span.checkmark
						#errordsgvo
					.buttonCont
						input.button(type="submit" value="Abschicken" onclick="checkEmail()")

			include ./_shared/footer_de.pug

script(src="./js/dropdown.js")
script(src="./js/menu.js")
