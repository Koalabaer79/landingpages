                    img#ring2.absolute(src="./assets/img/ring2.png")
                    img#ring3.absolute(src="./assets/img/ring3.png")
                    img#balken.absolute(src="./assets/img/balken.png")
                    img#lars.absolute.hidden(src="./assets/img/lars.png")
                    img#frontend.absolute.hidden(src="./assets/img/frontend.png")
                    img#developer.absolute.hidden(src="./assets/img/developer.png")
            #section1.section            
                #content1
                    h1 Lars Urban
                    p.subTitle Frontend-Developer
                    .exp
                        .borderTop
                        .borderBottom
                        .ico_cont
                            .ico_l(onmouseover="colorRed('exp')" onmouseout="colorWhite('exp')")
